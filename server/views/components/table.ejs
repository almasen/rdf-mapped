<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="bg-primary text-white">
            <tr>
                <th scope="col">#</th>
                <!-- <th scope="col">Type</th> -->
                <th scope="col">Title</th>
                <th scope="col">Capability</th>
                <th scope="col">Category</th>
                <th scope="col">Competency</th>
                <th scope="col">Level</th>
            </tr>
        </thead>
        <tbody>
            <% if (pageData.data.length > 0) { %>
            <% var idx = (pageData.meta.currentPage - 1) * pageData.meta.pageSize; pageData.data.forEach(e => { ++idx; %>
            <tr style="transform: rotate(0);">
                <th scope="row">
                    <a href="<%= baseurl %>/<%= e.id %>" class="stretched-link">
                        <%= idx %>
                    </a>
                </th>
                <!-- <td>Course</td> -->
                <td><%= e.title %></td>
                <td><%= e.capabilityTitle %></td>
                <td><%= e.categoryTitle %></td>
                <td><%= e.competencyTitle %></td>
                <td><%= e.phases.join("/") %></td>
            </tr>
            <% }); %>
            <% } %>
        </tbody>
    </table>
</div>
<nav aria-label="Page navigation example">
    <ul class="pagination justify-content-end">

        <!-- <li class="dropdown">
            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Dropdown</a>
            <div class="dropdown-menu">
                <a class="dropdown-item active" href="#">10</a>
                <a class="dropdown-item" href="#">25</a>
                <a class="dropdown-item" href="#">50</a>
                <a class="dropdown-item" href="#">100</a>
            </div>
        </li> -->

        <!-- navigation  -->
        <li class="page-item <% if (pageData.meta.currentPage === 1) { %> disabled <% } %>">
            <a class="page-link" href="<%= (searchUrl + (pageData.meta.currentPage - 1).toString()) %>"
                aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Previous</span>
            </a>
        </li>
        <!-- <li class="page-item">
            <a class="page-link" href="#" aria-label="Previous">
                <span aria-hidden="true">&lsaquo;</span>
                <span class="sr-only">Previous</span>
            </a>
        </li> -->

        <!-- first item  -->
        <li class="page-item<% if (pageData.meta.currentPage === 1) { %> active <% } %>">
            <a class="page-link" href="<%= (searchUrl + '1') %>">1</a>
        </li>
        <!-- ... if necessary  -->
        <% if (pageData.meta.currentPage > 3) { %>
        <li class="page-item disabled">
            <span class="page-link">...</a>
        </li>
        <% } %>

        <!-- ... main  -->

        <!-- previous element if necessary -->
        <% if (pageData.meta.currentPage > 2) { %>
        <li class="page-item">
            <a class="page-link" href="<%= (searchUrl + (pageData.meta.currentPage - 1).toString()) %>">
                <%= (pageData.meta.currentPage - 1) %>
            </a>
        </li>
        <% } %>

        <!-- current element if necessary -->
        <% if ((pageData.meta.currentPage !== 1) && (pageData.meta.currentPage !== pageData.meta.pageCount)) { %>
        <li class="page-item active">
            <a class="page-link" href="#">
                <%= (pageData.meta.currentPage) %>
                <span class="sr-only">(current)</span>
            </a>
        </li>
        <% } %>

        <!-- next element if necessary -->
        <% if (pageData.meta.currentPage < (pageData.meta.pageCount - 1)) { %>
        <li class="page-item">
            <a class="page-link" href="<%= (searchUrl + (pageData.meta.currentPage + 1).toString()) %>">
                <%= (pageData.meta.currentPage + 1) %>
            </a>
        </li>
        <% } %>

        <!-- ... if necessary  -->
        <% if ((pageData.meta.pageCount - pageData.meta.currentPage) > 2) { %>
        <li class="page-item disabled">
            <span class="page-link">...</a>
        </li>
        <% } %>
        <!-- ... last item if necessary -->
        <% if (pageData.meta.pageCount > 1) { %>
        <li class="page-item<% if (pageData.meta.currentPage === pageData.meta.pageCount) { %> active <% } %>">
            <a class="page-link" href="<%= (searchUrl + pageData.meta.pageCount.toString()) %>">
                <%= pageData.meta.pageCount %>
            </a>
        </li>
        <% } %>

        <!-- ... navigation  -->
        <!-- <li class="page-item">
            <a class="page-link" href="#" aria-label="Next">
                <span aria-hidden="true">&rsaquo;</span>
                <span class="sr-only">Next</span>
            </a>
        </li> -->
        <li class="page-item <% if (pageData.meta.currentPage === pageData.meta.pageCount) { %> disabled <% } %>">
            <a class="page-link" href="<%= (searchUrl + (pageData.meta.currentPage + 1).toString()) %>"
                aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Next</span>
            </a>
        </li>
    </ul>
</nav>
<script>
    $('.dropdown-toggle').dropdown()
</script>